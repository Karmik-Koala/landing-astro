    <style>

.info-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  color: var(--color-ferra);

  & .info-title-text {
    font-family: var(--font-family-title);
    font-size: var(--font-size-lg);
    font-weight: bold;
    padding: 15px 0;
  }

  & .info-description {
    font-family: var(--font-family-title);
    font-size: var(--font-size-normal);
    text-align: center;
  }
  & .info-card-container {
    display: flex;
    flex-direction: row;
    margin: auto;
    width: 85%;
    margin-top: 50px;
    padding: 10px;
    background-color: var(--color-white);
    border-radius: 10px;
    font-family: var(--font-family-content);

    & .card-image {
      padding: .5rem;
      box-sizing: border-box;

      & img {
        border-radius: 10px;
        box-shadow: 2px 2px 2px 1px rgb(0 0 0 / 40%);
        width: 100%;
      }
    }

    & .card-content {
      display: flex;
      flex-direction: column;
      align-items: start;
      padding: .5rem;

      & .title-recipee {
        font-size: var(--font-size-normal);
        margin: 0;
      }

      & .recipee {
        font-size: var(--font-size-md);
        text-align: start;
        margin-bottom: 10px;
      }

      & .nutritional-info-container {
        display: flex;
        flex-direction: row;
        width: 100%;
        background: var(--color-gray-light);

        & .kcal-box {
          display: flex;
          justify-content: center;
          align-items: center;
          font-size: var(--font-size-normal);
          padding: .5rem;
          margin: .5rem;
          background: var(--color-gray);
          color: var(--color-ferra);
        }

        & .nutritional-text {
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: flex-start;
          font-size: var(--font-size-md);
          padding: .5rem;
        }
      }
    }
  }
}

@media screen and (width < 800px) {
  .info-container {
    & .info-title-text {
      font-size: var(--font-size-nl);
    }

    & .info-description {
      margin: auto;
      width: 80%;
      font-size: var(--font-size-md);
    }

    & .info-card-container {
      flex-direction: column;

      & .kcal-box {
        & span {
          font-size: var(--font-size-normal);
        }
      }

      & .nutritional-text {
        & span {
          font-size: var(--font-size-xs);
        }
      }
    }
  }
}

@media screen and (width >= 800px) {
  .info-container {
    & .info-title-text {
      font-size: var(--font-size-nl);
    }

    & .info-description {
      margin: auto;
      width: 80%;
    }
    & .info-card-container {
      max-width: 80rem;

      & .card-image {
        max-width: 30%;
      }
    }

    & .info-description {
      margin: auto;
      /* width: 80%; */
      font-size: var(--font-size-md);
    }
  }
}
</style>